{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Adjust this based on your project's needs
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "typeRoots": ["./types", "./node_modules/@types", "./declarations"],
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "target": "es2015",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "jest",
      "node",
      //"html2pdf.js"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
